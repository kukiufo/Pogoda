<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <pl.kukiufo.pogoda.PogodaComponent
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/am_pogoda_component"
        layout="@layout/pogoda_component"
        android:layout_gravity="center" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/am_im_refresh"
        android:layout_gravity="right"
        android:src="@mipmap/ic_refresh"
        android:background="@drawable/refresh_style"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/am_pogoda_component"
        android:layout_alignEnd="@+id/am_pogoda_component" />
</RelativeLayout>
